<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exo6">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <TableView fx:id="personTableView" prefHeight="300.0" prefWidth="500.0">
        <columns>
          <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Nom" />
          <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="Prénom" />
          <TableColumn fx:id="ageColumn" prefWidth="100.0" text="Âge" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddPerson" text="Ajouter une personne" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeletePerson" text="Supprimer la personne" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>